{
  "model": "copilot/gpt-4.1",
  "auto_continue": true,
  "context": {
    "max_tool": 40,
    "keep": 5,
    "clear_input": true
  },
  "permission": {
    "deny": {
      "bash": {
        "arguments": {
          "command": ["^rm", "\\&\\&\\s*rm"]
        }
      }
    },
    "allow": {
      "bash": {
        "arguments": {
          "command": ["^git diff", "^git status", "^git log"]
        }
      },
      "grep": {
        "arguments": {
          "pattern": [".*"],
          "glob": ["\\.lua$"]
        }
      },
      "read": {
        "arguments": {
          "path": ["\\.lua$", "README.md$"]
        }
      },
      "fetch": {
        "arguments": {
          "url": ["^https://github.com/", "^https://raw.githubusercontent.com/"]
        }
      }
    }
  }
}
